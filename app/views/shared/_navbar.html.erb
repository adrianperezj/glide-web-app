<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-navbar" style="display: flex; width: 100%; height: 72px; padding: 24px 48px; align-items: center; flex-shrink: 0; background: var(--primary-primary, #097695);">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "/assets/Glide-logo-white.png", style: "width: 80px;" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto" style="gap: 10px;">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Create Location", new_location_path, class: "nav-link btn btn-primary", style: "color: white" %>
          </li>
          <li class="nav-item active">
            <%= link_to "My Reviews", my_reviews_path, class: "nav-link btn btn-primary", style: "color: white" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Locations", my_locations_path, class: "nav-link btn btn-primary", style: "color: white" %>
          </li>
          <li class="nav-item dropdown" style="gap: 20px;">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, class: "avatar bordered-avatar", alt: "User Avatar" %>
              <% else %>
                <%= image_tag "/assets/avatar-white.png", class: "avatar bordered-avatar", alt: "Default Avatar" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Create Location", new_user_registration_path, class: "nav-link btn btn-primary", style: "color: white" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
